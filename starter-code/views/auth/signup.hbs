<form id="form" action="/signup" method="POST">
<h2>Signup</h2>
<div class="form-group">
  <label for="username">Username</label>
  <input class="form-control" type="text" name="username" placeholder="Your username" required>
</div>
<div class="form-group">
  <label for="password">Password</label>
  <input class="form-control" type="password" name="password" placeholder="********" required>
</div>
    <div class="justify-center">
  <button class="mt-3 btn btn-dark form-control" type="submit">Create account </button>
    <p class="account-message pt-3">Your account is already created? <a href="/login">Log in</a></p>
  </div>
</form>

{{#if errorMessage}}
  <div class="error-message">{{ errorMessage }}</div>
{{/if}}