<form action="/login" method="POST" id="form">
  <h2>Login</h2>
  <div class="form-group">
    <label for="username">Username</label>
    <input class="form-control" type="text" name="username" aria-describedby="helpId" placeholder="Your username" required>
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input class="form-control" type="password" name="password" aria-describedby="helpId" placeholder="********" required>
  </div>
  {{#if errorMessage }}
    <div class="error-message">{{ errorMessage }}</div>
  {{/if}}
  <div class="justify-center">
    <button class="mt-3 btn btn-dark form-control">Log in</button>
    <p class="account-message pt-3">Don't have an account? <a href="/signup">Sign up</a></p>
  </div>
</form>

